<p>// recently published pages</p>
<ul class="embedded blog-posts">
    {% set top = 3 %}
    {%- for post in collections.post | reverse -%}
        {%- if (loop.index <= top) and (top <= loop.length) -%}
            <li>
                <span>{{ post.date | postDate }}</span>
                <a href="{{post.url}}">{{ post.data.title }}</a>
                <p>{{ post.data.desc }}</p>
            </li>
        {%- endif -%}
    {%- endfor -%}
</ul>